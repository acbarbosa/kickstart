#!/bin/bash -e

[[ "$1" == "--sudo" ]] && prefix="sudo " && shift

target=$1
[ "$target" ] || echo "Please, provide an ssh target"
shift

[[ "$1" == "--sudo" ]] && prefix="sudo " && shift

remote_command=$(
cat <<CMD
  [ -d ~/kickstart ] && rm -rf ~/kickstart
  mkdir ~/kickstart
  cd ~/kickstart
  tar xz
  $prefix bash install.sh
CMD
)

kickstart compile $@
tar chz -C compile . | ssh $target "$remote_command"
